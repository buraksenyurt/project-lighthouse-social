@page
@model LighthouseSocial.Backoffice.Pages.Lighthouse.ListModel
@{
    ViewData["Title"] = "Lighthouse List";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">
                <i class="fas fa-lighthouse text-primary me-2"></i>
                Lighthouse Directory
            </h1>
            <p class="text-muted mb-0">Manage and view all lighthouses in the system</p>
        </div>
        <a href="/Lighthouse/Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Add New Lighthouse
        </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <strong>Error!</strong> @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.Lighthouses?.Any() == true)
    {
        <div class="card bg-light mb-4">
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-4">
                        <div class="d-flex align-items-center justify-content-center">
                            <i class="fas fa-lighthouse text-primary fs-2 me-3"></i>
                            <div>
                                <h4 class="mb-0">@Model.TotalCount</h4>
                                <small class="text-muted">Total Lighthouses</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="d-flex align-items-center justify-content-center">
                            <i class="fas fa-globe text-success fs-2 me-3"></i>
                            <div>
                                <h4 class="mb-0">@Model.Lighthouses.Select(l => l.CountryId).Distinct().Count()</h4>
                                <small class="text-muted">Countries</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="d-flex align-items-center justify-content-center">
                            <i class="fas fa-map-marked-alt text-info fs-2 me-3"></i>
                            <div>
                                <h4 class="mb-0">Active</h4>
                                <small class="text-muted">Status</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-table me-2"></i>
                    Lighthouse Database
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">
                                    <i class="fas fa-lighthouse me-2"></i>Name
                                </th>
                                <th scope="col">
                                    <i class="fas fa-flag me-2"></i>Country ID
                                </th>
                                <th scope="col">
                                    <i class="fas fa-map-marker-alt me-2"></i>Coordinates
                                </th>
                                <th scope="col">
                                    <i class="fas fa-cog me-2"></i>Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var lighthouse in Model.Lighthouses)
                            {
                                <tr>
                                    <td>
                                        <strong>@lighthouse.Name</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@lighthouse.CountryName</span>
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            <i class="fas fa-compass me-1"></i>
                                            @lighthouse.Latitude.ToString("F6"), @lighthouse.Longitude.ToString("F6")
                                        </small>
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="https://www.google.com/maps?q=@lighthouse.Latitude,@lighthouse.Longitude"
                                               target="_blank"
                                               class="btn btn-sm btn-outline-primary"
                                               title="View on Google Maps">
                                                <i class="fas fa-map me-1"></i>Map
                                            </a>
                                            <form method="post" style="display: inline;"
                                                  onsubmit="return confirm('Are you sure you want to delete @lighthouse.Name?');">
                                                <input type="hidden" name="id" value="@lighthouse.Id" />
                                                <button type="submit"
                                                        asp-page-handler="Delete"
                                                        class="btn btn-sm btn-outline-danger"
                                                        title="Delete lighthouse">
                                                    <i class="fas fa-trash me-1"></i>Delete
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            @if (Model.TotalPages > 1)
            {
                <div class="card-footer bg-light">
                    <nav aria-label="Lighthouse pagination">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <small class="text-muted">
                                    Showing @((Model.CurrentPage - 1) * Model.PageSize + 1) to
                                    @(Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalCount))
                                    of @Model.TotalCount lighthouses
                                </small>
                            </div>
                            <ul class="pagination pagination-sm mb-0">
                                <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                                    <a class="page-link"
                                       href="@(Model.HasPreviousPage ? $"/Lighthouse/List?page={Model.CurrentPage - 1}" : "#")"
                                       aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </li>

                                @{
                                    int startPage = Math.Max(1, Model.CurrentPage - 2);
                                    int endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
                                }

                                @if (startPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="/Lighthouse/List?page=1">1</a>
                                    </li>
                                    @if (startPage > 2)
                                    {
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    }
                                }

                                @for (int i = startPage; i <= endPage; i++)
                                {
                                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                        <a class="page-link" href="/Lighthouse/List?page=@i">@i</a>
                                    </li>
                                }

                                @if (endPage < Model.TotalPages)
                                {
                                    @if (endPage < Model.TotalPages - 1)
                                    {
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    }
                                    <li class="page-item">
                                        <a class="page-link" href="/Lighthouse/List?page=@Model.TotalPages">@Model.TotalPages</a>
                                    </li>
                                }

                                <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                                    <a class="page-link"
                                       href="@(Model.HasNextPage ? $"/Lighthouse/List?page={Model.CurrentPage + 1}" : "#")"
                                       aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="fas fa-lighthouse text-muted" style="font-size: 4rem;"></i>
            </div>
            <h4 class="text-muted">No Lighthouses Found</h4>
            <p class="text-muted mb-4">Get started by adding your first lighthouse to the database.</p>
            <a href="/Lighthouse/Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Add Your First Lighthouse
            </a>
        </div>
    }
</div>
