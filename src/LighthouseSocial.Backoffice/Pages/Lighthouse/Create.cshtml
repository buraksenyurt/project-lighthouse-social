@page
@model LighthouseSocial.Backoffice.Pages.Lighthouse.CreateModel
@{
    ViewData["Title"] = "Create a New Lighthouse";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">
                <i class="fas fa-lighthouse text-primary me-2"></i>Create a New Lighthouse
            </h1>
            <p class="text-muted mb-0">Add a new lighthouse to the database</p>
        </div>
        <a asp-page="/Lighthouse/List" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            <strong>Success!</strong> @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <strong>Error!</strong> @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="card-title mb-0">
                <i class="fas fa-edit me-2"></i>
                Lighthouse Details
            </h5>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="LighthouseForm.Name" class="form-label">
                            <i class="fas fa-tag text-primary me-2"></i>
                            Lighthouse Name
                        </label>
                        <input asp-for="LighthouseForm.Name"
                               class="form-control"
                               placeholder="Example: Şile Deniz Feneri"
                               id="LighthouseForm_Name" />
                        <span asp-validation-for="LighthouseForm.Name" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="LighthouseForm.CountryId" class="form-label">
                            <i class="fas fa-flag text-success me-2"></i>
                            Country ID
                        </label>
                        <input asp-for="LighthouseForm.CountryId"
                               type="number"
                               class="form-control"
                               placeholder="Example: 1"
                               id="LighthouseForm_CountryId" />
                        <div class="form-text">
                            <i class="fas fa-info-circle me-1"></i>
                            For Türkiye use 49
                        </div>
                        <span asp-validation-for="LighthouseForm.CountryId" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="LighthouseForm.Latitude" class="form-label">
                            <i class="fas fa-map-marker-alt text-info me-2"></i>
                            Latitude
                        </label>
                        <input asp-for="LighthouseForm.Latitude"
                               type="number"
                               step="0.000001"
                               class="form-control"
                               placeholder="Example: 41.175278"
                               id="LighthouseForm_Latitude" />
                        <div class="form-text">
                            <i class="fas fa-ruler-horizontal me-1"></i>
                            Between -90.0 and 90.0
                        </div>
                        <span asp-validation-for="LighthouseForm.Latitude" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="LighthouseForm.Longitude" class="form-label">
                            <i class="fas fa-map-marker-alt text-warning me-2"></i>
                            Longitude
                        </label>
                        <input asp-for="LighthouseForm.Longitude"
                               type="number"
                               step="0.000001"
                               class="form-control"
                               placeholder="Example: 29.533611"
                               id="LighthouseForm_Longitude" />
                        <div class="form-text">
                            <i class="fas fa-ruler-vertical me-1"></i>
                            Between -180.0 and 180.0
                        </div>
                        <span asp-validation-for="LighthouseForm.Longitude" class="text-danger small"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                    <a asp-page="/Lighthouse/List" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Save Lighthouse
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
